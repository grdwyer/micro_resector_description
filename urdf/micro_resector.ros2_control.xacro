<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="micro_resector_control" params="name hardware:=false">
        <xacro:property name="linear_position_limit" value="0.015"/>

        <ros2_control name="${name}" type="system">
            <hardware>
                <xacro:if value="${hardware}">
                    <plugin>attocube_hardware_interface/AttocubeHardwareInterface</plugin>
                </xacro:if>
                <xacro:unless value="${hardware}">
                    <plugin>fake_components/GenericSystem</plugin>
                </xacro:unless>
            </hardware>
            <joint name="tweezer_x_lin_joint">
                <command_interface name="position">
                    <param name="min">-${linear_position_limit}</param>
                    <param name="max">${linear_position_limit}</param>
                </command_interface>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
                <xacro:if value="${hardware}">
                    <param name="device">3</param>
                    <param name="axis">0</param>
                    <param name="type">6</param>
                    <param name="voltage">40000</param>
                    <param name="frequency">2000000</param>
                </xacro:if>
            </joint>
            <joint name="tweezer_y_lin_joint">
                <command_interface name="position">
                    <param name="min">-${linear_position_limit}</param>
                    <param name="max">${linear_position_limit}</param>
                </command_interface>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
                <xacro:if value="${hardware}">
                    <param name="device">3</param>
                    <param name="axis">1</param>
                    <param name="type">6</param>
                    <param name="voltage">40000</param>
                    <param name="frequency">200000</param>
                </xacro:if>
            </joint>
            <joint name="tweezer_z_lin_joint">
                <command_interface name="position">
                    <param name="min">-${linear_position_limit}</param>
                    <param name="max">${linear_position_limit}</param>
                </command_interface>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
                <xacro:if value="${hardware}">
                    <param name="device">3</param>
                    <param name="axis">1</param>
                    <param name="type">6</param>
                    <param name="voltage">40000</param>
                    <param name="frequency">200000</param>
                </xacro:if>

            </joint>

            <joint name="scalpel_x_lin_joint">
                <command_interface name="position">
                    <param name="min">-${linear_position_limit}</param>
                    <param name="max">${linear_position_limit}</param>
                </command_interface>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
                <xacro:if value="${hardware}">
                    <param name="device">1</param>
                    <param name="axis">0</param>
                    <param name="type">6</param>
                    <param name="voltage">40000</param>
                    <param name="frequency">200000</param>
                </xacro:if>
            </joint>
            <joint name="scalpel_y_lin_joint">
                <command_interface name="position">
                    <param name="min">-${linear_position_limit}</param>
                    <param name="max">${linear_position_limit}</param>
                </command_interface>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
                <xacro:if value="${hardware}">
                    <param name="device">1</param>
                    <param name="axis">1</param>
                    <param name="type">6</param>
                    <param name="voltage">40000</param>
                    <param name="frequency">200000</param>
                </xacro:if>
            </joint>
            <joint name="scalpel_z_lin_joint">
                <command_interface name="position">
                    <param name="min">-${linear_position_limit}</param>
                    <param name="max">${linear_position_limit}</param>
                </command_interface>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
                <xacro:if value="${hardware}">
                    <param name="device">1</param>
                    <param name="axis">2</param>
                    <param name="type">6</param>
                    <param name="voltage">40000</param>
                    <param name="frequency">200000</param>
                </xacro:if>
            </joint>

            <joint name="centre_rot_joint">
                <command_interface name="position"/>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
                <xacro:if value="${hardware}">
                    <param name="device">2</param>
                    <param name="axis">0</param>
                    <param name="type">14</param>
                    <param name="voltage">40000</param>
                    <param name="frequency">200000</param>
                </xacro:if>
            </joint>
        </ros2_control>
    </xacro:macro>

</robot>